# Database connection (use Vercel Postgres URL or any PostgreSQL connection string)
# Get this from Vercel Dashboard -> Storage -> Postgres -> .env.local tab
POSTGRES_URL=postgres://username:password@host:5432/database

# Session security
NUXT_SESSION_PASSWORD=generate_a_random_32_character_string

# OAuth - Spotify
NUXT_OAUTH_SPOTIFY_CLIENT_ID=your_spotify_client_id
NUXT_OAUTH_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# OAuth - Google (optional)
NUXT_GOOGLE_CLIENT_ID=your_google_client_id
NUXT_GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI API Keys
NUXT_GEMINI_API_KEY=your_gemini_api_key
NUXT_OPENAI_API_KEY=your_openai_api_key
NUXT_KIMI_API_KEY=your_kimi_api_key

# Spotify Service Account (for anonymous users)
NUXT_SPOTIFY_SERVICE_CLIENT_ID=your_spotify_service_client_id
NUXT_SPOTIFY_SERVICE_CLIENT_SECRET=your_spotify_service_client_secret
